        <div class="form-group">
            <div class="multiselect">
                <div class="selectBox" onclick="showCheckboxes()">
                    <select class="custom-select">
                        <option>@textFilter.Name</option>
                    </select>
                    <div class="overSelect"></div>
                </div>
                <div class="checkBoxContainer">
                    <div id="checkboxes">
                        @foreach (var value in textFilter.PredefinedValues)
                        {
                            <label for="@value.Value">
                                <input type="checkbox" id="@value.Value" /> @value.Name
                            </label>
                        }
                    </div>
                </div>
            </div>
        </div>
    }

}

@if (Model.RangeFilters.Count != 0)
{
    @foreach (var rangeFilter in Model.RangeFilters)
    {
        <div class="form-group">
            <div class="row">

                <div class="col-lg-12">
                    <div class="range-group">
                        <input class="form-control form-control-sm range-from" type="text" placeholder="@rangeFilter.Name from" id="inputSmall">
                        <input class="form-control form-control-sm range-to" type="text" placeholder="@rangeFilter.Name to" id="inputSmall">
                    </div>

                </div>
            </div>

        </div>
    }

}