
@if (false)
{
    <form asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })" method="post" id="logoutForm" class="navbar-right">
        <ul class="nav navbar-nav navbar-right">
            <li class="nav-item">
                <a asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage"></a>
            </li>
            <li class="nav-item">
                <button type="submit" class="btn btn-link navbar-btn navbar-link">Logout</button>
            </li>
        </ul>
    </form>
}
else
{
    <ul class="nav navbar-nav navbar-right">
        <li class="nav-item"><a class="login-button" asp-controller="Account" asp-action="Login"><i class="fas fa-sign-in-alt"></i> LogIn</a></li>
        <li class="nav-item"><a class="btn btn-primary " asp-controller="Account" asp-action="Register"><span style="margin-bottom: 2px">Register</span> </a></li>

    </ul>
}