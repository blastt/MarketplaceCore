@model Marketplace.Web.Models.Offer.DetailsOfferViewModel
@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_OfferLayout.cshtml";
}
    <div class="container">

        <div class="row">

            <div class="col-lg-9">
                <div class="block-offer-details mb-3">
                    <div class="offer-details-sector padding-details">
                        Buy dota 2 account Lem 2x2
                    </div>
                    <div class="offer-details-sector">
                        <div class="row">

                            <div class="col-lg-6 text-center">

                                <span class="helper"></span>
                                <img style="max-width:300px" class="offer-img" src="~/images/steam-privacy.jpg" />
                            </div>
                            <div class="col-lg-6">

                                <div class="card-custom description-card mb-3">
                                    <div class="row">
                                        <div class="col-lg-12">
                                            <table class="table" style="font-size: 14px">
                                                <tr>
                                                    <td><i class="fas fa-link mr-2"></i> Ссылка</td>
                                                    <td class="text-right font-weight-bold">@Model.Url</td>
                                                </tr>
                                                <tr>
                                                    <td><i class="fas fa-gamepad mr-2"></i> Игра</td>
                                                    <td class="text-right font-weight-bold">@Model.Game</td>
                                                </tr>
                                                <tr>
                                                    <td><i class="fas fa-calendar-alt mr-2"></i> Дата создания аккаунта</td>
                                                    <td class="text-right align-middle font-weight-bold">@Model.CreatedAccountDate</td>
                                                </tr>

                                            </table>
                                            <table class="table" style="font-size: 14px">

                                                <tr>
                                                    <td>Без бана</td>
                                                    <td class="text-right">@(!Model.IsBanned)</td>
                                                </tr>
                                                <tr>
                                                    <td>Личный аккаунт</td>
                                                    <td class="text-right">@Model.PersonalAccount</td>
                                                </tr>
                                                <tr>
                                                    <td>Продавец платит за гаранта</td>
                                                    <td class="text-right">@Model.SellerPaysMiddleman</td>
                                                </tr>
                                            </table>
                                        </div>


                                    </div>

                                </div>
                            </div>

                        </div>
                    </div>
                    <div class="offer-details-sector padding-details">
                        <div class="row">
                            <div class="col-lg-4 pb-2 offer-filter-separator">
                                <div class="row">
                                    <div class="col-lg-6">Rank 2X2</div>
                                    <div class="col-lg-6 text-left text-primary">The Global Elite</div>
                                </div>

                            </div>
                            <div class="col-lg-4 pb-2 offer-filter-separator">
                                <div class="row">
                                    <div class="col-lg-6">Rank 2X2</div>
                                    <div class="col-lg-6 text-left text-primary">The Global Elite</div>
                                </div>

                            </div>
                            <div class="col-lg-4 pb-2 offer-filter-separator">
                                <div class="row">
                                    <div class="col-lg-6">Rank 2X2</div>
                                    <div class="col-lg-6 text-left text-primary">The Global Elite</div>
                                </div>

                            </div>
                        </div>
                        
                        
                    </div>
                    <div class="col-lg-12">
                        <div class="padding-details">
                            fdgfdgd
                        </div>
                    </div>
                </div> 
                <div class="block-offer-details padding-details">
                    <div class="form-group">
                        <label for="exampleTextarea">Message</label>
                        <textarea class="form-control" id="exampleTextarea" rows="6"></textarea>
                    </div>
                    <div class="text-right">
                        <a class="btn btn-primary" href="#"><i class="fas fa-paper-plane"></i> Send</a>
                    </div>
                    
                </div>
            </div>
            
            
            <div class="col-lg-3">
                <div class="block-offer-details padding-details text-center mb-3" style="font-weight: 500; font-size: 22px">
                    200 UAH
                </div>
                <ul class="offer-sidebar-buttons">
                    <li>
                        <a class="contact-button" href="#"><i class="fas fa-archive mr-3"></i> Buy account</a>

                    </li>
                    <li>
                        <a class="contact-button" href="#"><i class="fas fa-envelope mr-3"></i> Send message</a>

                    </li>
                    
                </ul>
                <div class="block-offer-details padding-details" style=" font-size: 18px">
                    <div class="card-custom description-card">
                        <div class="text-center mb-2">
                            <img src="~/images/Avatar-Transparent-Image.png" style="width: 64px; height: 64px" alt="Alternate Text" />
                        </div>
                        <div class="text-center mb-2">
                            <a href="">Blast</a>
                        </div>
                        <table class="table" style="font-size: 14px">
                            <tr>
                                <td>Дата</td>
                                <td class="text-right">12.12.2017</td>
                            </tr>
                            <tr>
                                <td>Рейтинг</td>
                                <td class="text-right">12</td>
                            </tr>
                            <tr>
                                <td><i class="fas fa-thumbs-up"></i></td>
                                <td class="text-right">12</td>
                            </tr>
                            <tr>
                                <td><i class="fas fa-thumbs-down"></i></td>
                                <td class="text-right">2</td>
                            </tr>
                        </table>

                    </div>
                </div>
            </div>
            
        </div>

        

    </div>
