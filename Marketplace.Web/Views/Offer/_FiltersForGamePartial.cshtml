@model Marketplace.Web.Models.FilterListViewModel

@if (Model.TextFilters.Count != 0)
{
    @foreach (var textFilter in Model.TextFilters)
    {
    <div class="form-group">
        <select class="custom-select" name="text_filter[@textFilter.Value]">
            @foreach (var value in textFilter.PredefinedValues)
            {
                <option value="@value.Value">@value.Name</option>
            }
        </select>
    </div>        
    }

}

@if (Model.RangeFilters.Count != 0)
{
    @foreach (var rangeFilter in Model.RangeFilters)
    {
        <div class="form-group">
            <div class="row">

                <div class="col-lg-12">
                    <div class="range-group">
                        <input class="form-control form-control-sm range-from" name="range_filters_from=@rangeFilter.Value" type="text" placeholder="@rangeFilter.Name from" id="inputSmall">
                        <input class="form-control form-control-sm range-to" name="range_filters_to=@rangeFilter.Value" type="text" placeholder="@rangeFilter.Name to" id="inputSmall">
                    </div>

                </div>
            </div>

        </div>
    }

}