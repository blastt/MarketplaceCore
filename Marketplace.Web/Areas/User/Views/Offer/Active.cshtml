@model Marketplace.Web.Areas.User.Models.Offer.OfferListViewModel
@{
    ViewBag.Title = "Active";
    Layout = "~/Areas/User/Views/Shared/_UserLayout.cshtml";
}

@{ 
    var offerGame = Localizer["OfferGame"].Value;
    var offerDate = Localizer["OfferDate"].Value;
    var offerPrice = Localizer["OfferPrice"].Value;
    var details = Localizer["Details"].Value;
    var edit = Localizer["Edit"];
    var deactivate = Localizer["Deactivate"];
    var fromDate = SharedLocalizer["FromDate"];
    var toDate = SharedLocalizer["ToDate"];
}

<div class="page-info">
    <h2>@Localizer["Header"]</h2>
    <p class="lead">@Localizer["Summary"]</p>
</div>
<div class="card-custom-account">

    @{await Html.RenderPartialAsync("_Menu"); }
    @{await Html.RenderPartialAsync("_OfferMenu", Model); }
    <table class="table text-center">
        <thead>
            <tr>
                <th class="account-offer-game">@offerGame</th>
                <th class="account-offer-header"></th>
                <th class="account-offer-date">@offerDate</th>
                <th class="account-offer-price">@offerPrice</th>

            </tr>
        </thead>
        <tbody>
            @foreach (var offer in Model.Offers)
            {
                <tr>
                    <td class="align-middle">@offer.Game</td>
                    <td>
                        <div class="row text-left">
                            <div class="col-sm-12">
                                <span>
                                    @offer.Header
                                </span>

                            </div>
                        </div>
                        <div class="row text-left">
                            <div class="col-sm-12">
                                <a class="font-size-12 mr-3" href="@Url.Action("Details", "Offer", new { id = offer.Id, area = "" })"><i class="color-dark fas fa-eye"></i> @details</a>
                                <a class="font-size-12 mr-3" href="@Url.Action("Edit", "Offer", new { id = offer.Id, area = "" })"><i class="color-dark fas fa-edit"></i> @edit</a>
                                <a class="font-size-12 mr-3" href="@Url.Action("Deactivate", "Offer", new { id = offer.Id, area = "User" })"><i class="color-dark fas fa-times-circle"></i> @deactivate</a>
                            </div>

                        </div>
                    </td>
                    <td>
                        <div class="row">
                            <div class="col-sm-12">
                                <span class="font-size-12">@fromDate: @offer.CreatedDate.ToShortDateString()</span>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-sm-12">
                                <span class="font-size-12">@toDate: @offer.DeletedDate.ToShortDateString()</span>
                            </div>
                        </div>
                    </td>
                    <td class="align-middle"><span class="text-700">@Html.DisplayFor(m => offer.Price)</span> </td>

                </tr>
            }

        </tbody>
    </table>
</div>

