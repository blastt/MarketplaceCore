<!DOCTYPE html>

<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>

    <environment include="Development">
        <link rel="stylesheet" href="~/lib/bootstrap/css/bootstrap.css" />
        <link rel="stylesheet" href="~/css/site.css" />
    </environment>
    <link href="https://fonts.googleapis.com/css?family=Roboto:400,500,600" rel="stylesheet">
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.7.2/css/all.css" integrity="sha384-fnmOCqbTlWIlj8LyTjo7mOUStjsKC4pOpQbqyi7RrhN7udi9RwhKkMHpvLbHG9Sr" crossorigin="anonymous">

</head>
<body>
    <div class="off-canvas-container">
        <div class="off-canvas-content">
            <div class="layout">
                <nav class="navbar navbar-expand-lg fixed-top navbar-dark bg-dark">
                    <div class="container">
                        <div class="collapse navbar-collapse" id="navbarSupportedContent">
                            <ul class="navbar-nav mr-auto">
                                <li class="nav-item"><a class="nav-link" asp-area="" asp-controller="Home" asp-action="Index">Главная</a></li>
                                <li class="nav-item"><a class="nav-link" asp-area="Admin" asp-controller="Home" asp-action="Index">Пользователи</a></li>
                                <li class="nav-item"><a class="nav-link" asp-area="Admin" asp-controller="Game" asp-action="Create">Игры</a></li>
                                <li class="nav-item"><a class="nav-link" asp-area="Admin" asp-controller="FilterText" asp-action="Create">Фильтры</a></li>
                                <li class="nav-item"><a class="nav-link" asp-area="Admin" asp-controller="Home" asp-action="Contact">Айтемы</a></li>
                            </ul>

                            <partial name="_LoginPartial" />
                        </div>
                    </div>
                </nav>
                <div class="container">
                    @RenderBody()
                </div>

            </div>
            <footer class="footer-dark">
                <div class="container">
                    <div class="row">
                        <div class="col-md-12 text-center">
                            <p class="copyright">
                                @SharedLocalizer["Copyright"]
                            </p>
                            <a href="/legal/" target="_self">@SharedLocalizer["Terms"]</a>
                            <br>
                            <a href="/legal/privacy/" target="_self">@SharedLocalizer["Policy"]</a>
                            @await Html.PartialAsync("_SelectLanguagePartial")
                        </div>
                    </div>
                </div>
            </footer>
        </div>

    </div>
    <script src="~/lib/jquery/jquery.js"></script>
    <script src="~/lib/bootstrap/js/bootstrap.min.js"></script>

</body>


</html>
