@model Marketplace.Web.Areas.Admin.Models.CreateFilterTextViewModel


@{
    ViewData["Title"] = "Create";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

@await Html.PartialAsync("_CreateFilterMenuPartial")
<h2>Create Filter text</h2>

<form asp-controller="FilterText" asp-action="Create" method="post">
    <div class="form-group">
        <label asp-for="Game" class="control-label"></label>
        <input name="Game" class="form-control" />
        <span asp-validation-for="Game" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Name" class="control-label"></label>
        <input name="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Value" class="control-label"></label>
        <input name="Value" class="form-control" />
        <span asp-validation-for="Value" class="text-danger"></span>
    </div>
    <input type="submit" value="Submit" />
</form>